#include<stdio.h>
int main(){
    int peso;
    float a, b, c;
    printf("digite seu genero \n 1 - Feminino: \n 2 - Masculino: \n ");
    scanf("%d", &peso);
    switch(peso){
    case 1:
    printf("Digite seu altura: ");
    scanf("%f", &a);
    c = (72.7 * a) - 58;
    printf("Seu peso ideal é:%2.f", c);
    break;
    case 2:
    printf("Digite seu altura: ");
    scanf("%f", &b);
    c = (62.1 * b) - 44.7;
    printf(" Seu peso ideal é:%2.f", c);
    break;
    }
   return 0;
}
